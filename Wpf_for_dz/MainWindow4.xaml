<Window x:Class="Wpf_for_dz.MainWindow4"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Wpf_for_dz"
        mc:Ignorable="d"
        Title="MainWindow4" Height="450" Width="800">
    <Window.Resources>
        <ResourceDictionary Source="/Dark_style.xaml"></ResourceDictionary>
    </Window.Resources>
    <DockPanel Style="{StaticResource For_main_body}">
        <WrapPanel   DockPanel.Dock="Right" Margin="10" >

            <Border Style="{StaticResource For_border}">
                <Button HorizontalAlignment="Right" Style="{StaticResource For_btn_dark}">dsdsa</Button>
            </Border>
            <Border Style="{StaticResource For_border}" BorderBrush="Black">
                <Button HorizontalAlignment="Right" Style="{StaticResource For_btn_white}">sd</Button>
            </Border>
        </WrapPanel>
        <StackPanel>
            <Image HorizontalAlignment="Left" Margin="10"/>
            <TextBlock TextWrapping="Wrap" Style="{StaticResource For_label_big}" Width="250"  HorizontalAlignment="Left">fsdaadsdas</TextBlock>
        
        </StackPanel>
    </DockPanel>
    
</Window>
